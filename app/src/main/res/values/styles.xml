    <!-- Define the button style -->
    <style name="CustomAlertDialogButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomAlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <!-- Set the dialog's background color -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Set the accent color to green, which affects button text color -->
        <item name="colorAccent">@color/primary</item>

        <!-- Optional: Customize title and message text colors -->
        <item name="android:textColorPrimary">@color/primary</item>
        <item name="android:textColorSecondary">@color/primary</item>
    </style>
